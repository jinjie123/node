<div class="content">

    <div class="header">

        <h1 class="page-title">修改用户信息</h1>
    </div>

    <ul class="breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li><a href="users.html">Users</a> <span class="divider">/</span></li>
        <li class="active">User</li>
    </ul>

    <div class="container-fluid">
        <div class="row-fluid">


            <div class="well">

                    <div class="tab-pane active in" id="home">
                        <form id="tab" method="post" action="<%=host%>/admin/user/doEdit"  enctype="multipart/form-data">
                            <label>用户名</label>
                            <input type="text" name="username" value="<%=list[0].username%>" class="input-xlarge">
                            <label>密码</label>
                            <input type="password" name="password" value="<%=list[0].password%>" class="input-xlarge">
                            <label>手机号码</label>
                            <input type="text" name="tel"  value="<%=list[0].tel%>" class="input-xlarge">
                            <label>邮箱</label>
                            <input type="text" name="email"  value="<%=list[0].email%>"  class="input-xlarge">
                            <label>地址</label>
                            <input type="text" name="address"  value="<%=list[0].address%>"  class="input-xlarge">
                            <label>状态</label>
                            <input type="text" name="status"  value="<%=list[0].status%>"  class="input-xlarge">
                            <label>增加时间</label>
                            <input type="text" name="addtime"  value="<%=list[0].addtime%>"  class="input-xlarge" readonly>
                            <label>头像</label>
                            <p>
                                <img src="<%=host%>/<%=list[0].face%>" alt="" style="width: 30px"/>
                            </p>
                            <input type="hidden" name="oface" value="<%=list[0].face%>"/>
                            <input type="hidden" name="id" value="<%=list[0]._id%>"/>
                            <input type="file" name="face"/>
                            <br/>
                            <button class="btn btn-primary">提交</button>
                        </form>
                    </div>

                </div>

            </div>


        </div>
    </div>
</div>



<script src="<%=host%>/lib/bootstrap/js/bootstrap.js"></script>
<script type="text/javascript">
    $("[rel=tooltip]").tooltip();
    $(function() {
        $('.demo-cancel-click').click(function(){return false;});
    });
</script>

</body>
